# Turn on URL rewriting only when mod rewrite is turn on

<IfModule mod_rewrite.c>
	RewriteEngine On

	# Installation directory
	RewriteBase /

	#RewriteCond %{HTTP_HOST} !^www.cartehumanitaire-rca.org
	#RewriteRule (.*) https://www.cartehumanitaire-rca.org/$1 [R=301,L]

	#RewriteCond %{HTTPS} off
	#RewriteRule (.*) https://www.cartehumanitaire-rca.org/$1 [R=301,L]

	# Protect application and system files from being viewed
	RewriteRule ^(application|modules|system|tests|sql) - [F,L]

	# Send media and theme css/js files to the media controller
	#RewriteRule ^media/(css|js)/.* index.php/$0 [L]
	
	# Allow any files or directories that exist to be displayed directly
	RewriteCond %{REQUEST_FILENAME} !-f
	RewriteCond %{REQUEST_FILENAME} !-d

	# Rewrite all other URLs to index.php/URL
	RewriteRule .* index.php?kohana_uri=$0 [L,QSA]
</IfModule>

# Protect the htaccess from being viewed
<Files .htaccess>
	order allow,deny
	deny from all
</Files>

# Don't show directory listings for URLs which map to a directory.
Options -Indexes

#Follow symlinks
Options +FollowSymlinks
